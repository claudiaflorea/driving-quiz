<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/practice_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:weightSum="8"
                  android:background="@color/background">

      <TextView android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="35dp"
                tools:text="Question"/>
    <ImageView
        android:id="@+id/dead_end_sign"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/dead_end_sign"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Dead End "
        android:layout_marginBottom="-100dp"/>

    <ImageView
    android:id="@+id/pedestrians_sign"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:src="@drawable/pedestrians"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
    android:contentDescription="Pedestrians "
        android:layout_marginBottom="-100dp"/>

    <ImageView
        android:id="@+id/railroad"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/railroad_crossing"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Railroad crossing "
        android:layout_marginBottom="-100dp"/>
    <ImageView
        android:id="@+id/merging_right"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/merging_traffic"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Merge road from right side "
        android:layout_marginBottom="-100dp"/>

      <RadioGroup android:id="@+id/rg"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:weightSum="4"
          android:layout_marginTop="110dp">

          <RadioButton android:id="@+id/rbOption1"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:textSize="15sp"
                       tools:text="Option1"/>

          <RadioButton android:id="@+id/rbOption2"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:textSize="15sp"
                       tools:text="Option2"/>

          <RadioButton android:id="@+id/rbOption3"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:textSize="15sp"
                       tools:text="Option3"/>

          <RadioButton android:id="@+id/rbOption4"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:textSize="15sp"
                          tools:text="Option4"/>
      </RadioGroup>

      <LinearLayout android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:weightSum="1"
          >

          <Button android:id="@+id/btnSubmit"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:layout_weight="0.45"
                  android:background="@color/backgroundSubmit"
                  android:text="Submit"
                  android:textAllCaps="false"
                  android:textSize="15sp"/>


          <Button android:id="@+id/btnNext"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:layout_weight="0.45"
                  android:background="@color/backgroundNext"
                  android:text="Next"
                  android:textAllCaps="false"
                  android:textSize="15sp"/>
      </LinearLayout>

      <TextView android:id="@+id/tvScore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Score"
                android:textSize="20sp"/>

</LinearLayout>